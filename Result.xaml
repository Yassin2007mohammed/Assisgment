<Page x:Class="Quiz.Result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Result"
      Background="White">
    <Grid >


        <TextBlock Margin="10,10,50,349" Name ="TextBlock1" FontWeight="Bold" Foreground="#FF11F6FF" FontSize="48" FontStyle="Italic"/>
        
        
        <Button Content="Try Again" Click="Button_Click" Margin="630,400,10,10" FontSize="20" FontWeight="Bold" FontStyle="Italic" Background="#FF11F6FF" Foreground="#FFCECECE">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border
               Background="#FF11F6FF"
               CornerRadius="25">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" OpacityMask="Black"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        
        <Grid.Background>
            <ImageBrush ImageSource="6.jpg"/>
        </Grid.Background>
        
        
    </Grid>
</Page>
