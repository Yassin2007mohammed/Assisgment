<Page x:Class="Quiz.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome"
      Background="White">
    <Grid>
        
        
        <Grid.Background>
            <ImageBrush ImageSource="/2.jpg" TileMode="Tile" Stretch="Fill"/>
        </Grid.Background>
        
        
        <TextBlock Text="Desktop Quiz 📃" Margin="25,10,345,375" FontSize="48" FontWeight="Bold" FontStyle="Italic" Foreground="White" />
        
        
        <Button Content="Start Now 🤐" Margin="540,390,10,10" Click="Button_Click" FontSize="22" FontWeight="Bold" FontStyle="Italic" Foreground="#FFE9E9E9">
            <Button.Template >
                <ControlTemplate TargetType="Button" >
                    <Border
                        Background="#FF3C3737" 
                        CornerRadius="25">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        
    </Grid>
</Page>
